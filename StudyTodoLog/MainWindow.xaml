<Window x:Class="StudyTodoLog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyTodoLog"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000"
        WindowState="Maximized">
    <Window.Resources>
        <SolidColorBrush x:Key="AccentPurple" Color="#7C3AED"/>
        <SolidColorBrush x:Key="AccentPurpleLight" Color="#A78BFA"/>
        
        <!--追加、削除ボタンに適用されるデザイン-->
        <Style x:Key="CirclePurpleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentPurple}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="999">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="RoundedListViewStyle" TargetType="ListView">
            <Setter Property="BorderBrush" Value="{StaticResource AccentPurpleLight}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        
        <Style x:Key="BigRowItemStyle" TargetType="ListViewItem">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="6"/>
        </Style>
    </Window.Resources>

    <!--タスク一覧表示-->
    <Grid Margin="20">
        <Border CornerRadius="14"
                BorderBrush="{StaticResource AccentPurpleLight}"
                BorderThickness="1"
                Background="White"
                SnapsToDevicePixels="True">
            <!--ダブルクリックによる編集機能-->
            <ListView x:Name="TaskListView"
                  Style="{StaticResource RoundedListViewStyle}"
                  SizeChanged="TaskListView_SizeChanged"    
                  Margin="6">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem" BasedOn="{StaticResource BigRowItemStyle}">
                        <EventSetter Event="MouseDoubleClick" Handler="TaskItem_MouseDoubleClick"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.View>
                    <GridView>
                        <!--表頭のそれぞれの項目は比率＋最小幅で幅を配分します-->
                        <GridViewColumn x:Name="ColCompleted" Header="完了" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{StaticResource AccentPurpleLight}" BorderThickness="0,0,0,1" Padding="6,10">
                                        <CheckBox IsChecked="{Binding IsCompleted}" 
                                          HorizontalAlignment="Center"
                                          Click="CompletedCheckBox_Click"/>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn x:Name="ColTitle" Header="タイトル" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{StaticResource AccentPurpleLight}" BorderThickness="0,0,0,1" Padding="6,10">
                                        <TextBlock Text="{Binding Title}"
                                               FontSize="22"
                                               FontWeight="SemiBold"
                                               TextTrimming="CharacterEllipsis"/>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn x:Name="ColMemo" Header="メモ" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{StaticResource AccentPurpleLight}" BorderThickness="0,0,0,1" Padding="6,10">
                                        <TextBlock Text="{Binding Memo}"
                                               FontSize="18"
                                               Opacity="0.85"
                                               TextTrimming="CharacterEllipsis"/>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>


        <!--タスク追加を行うボタン。TaskModelのInsertメソッドと紐づける。-->
        <Button Content="＋"
                Style="{StaticResource CirclePurpleButtonStyle}"
                Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource CircleButtonSizeScale}}"
                Height="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource CircleButtonSizeScale}}"
                FontSize="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource CircleButtonFontScale}}"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="30"
                Click="AddButton_Click"/>

        <Button Content="🗑"
                Style="{StaticResource CirclePurpleButtonStyle}"
                Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource CircleButtonSizeScale}}"
                Height="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource CircleButtonSizeScale}}"
                FontSize="{Binding ActualWidth,RelativeSource={RelativeSource AncestorType=Window},Converter={StaticResource CircleButtonFontScale}}"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="30"
                Click="DeleteCompletedButton_Click"/>
    </Grid>
</Window>